<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/summarySport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_rectangle">

    <TextView
        android:id="@+id/summarySportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_container_margin"
        android:text="Sport"
        android:textColor="@color/blue"
        android:textSize="@dimen/headline_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/summarySportDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:layout_margin="@dimen/big_container_margin"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/summarySportText"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/summarySportIntensityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_container_margin"
        android:text="Intensity value"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/summarySportText"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/summarySportIntensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intensity: "
        android:layout_margin="@dimen/big_container_margin"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintEnd_toStartOf="@id/summarySportIntensityValue"
        app:layout_constraintTop_toBottomOf="@id/summarySportText"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>