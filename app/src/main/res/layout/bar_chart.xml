<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/barchart"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    tools:context=".BarChart">-->

    <TextView
        android:id="@+id/analysis"
        android:layout_width="79dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Analysis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yAxis"
        android:layout_width="3dp"
        android:layout_height="114dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="4dp"
        android:background="#050505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/analysis" />

    <TextView
        android:id="@+id/happyBar"
        android:layout_width="55dp"
        android:layout_height="2dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="24dp"
        android:background="#0E0E0E"
        app:layout_constraintStart_toEndOf="@+id/yAxis"
        app:layout_constraintBottom_toBottomOf="@id/yAxis" />

    <TextView
        android:id="@+id/neutralBar"
        android:layout_width="48dp"
        android:layout_height="2dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="24dp"
        android:background="#0C0C0C"
        app:layout_constraintStart_toEndOf="@+id/happyBar"
        app:layout_constraintBottom_toBottomOf="@id/yAxis" />

    <TextView
        android:id="@+id/sadBar"
        android:layout_width="52dp"
        android:layout_height="2dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="56dp"
        android:background="#0C0C0C"
        app:layout_constraintStart_toEndOf="@+id/neutralBar"
        app:layout_constraintBottom_toBottomOf="@id/yAxis" />

    <TextView
        android:id="@+id/happyBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="12dp"
        android:text="Happy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/happyBar" />

    <TextView
        android:id="@+id/neutralBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="16dp"
        android:text="Neutral"
        app:layout_constraintStart_toEndOf="@+id/happyBarText"
        app:layout_constraintTop_toBottomOf="@+id/neutralBar" />

    <TextView
        android:id="@+id/sadBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        android:text="Sad"
        app:layout_constraintStart_toEndOf="@+id/neutralBarText"
        app:layout_constraintTop_toBottomOf="@+id/sadBar" />

</androidx.constraintlayout.widget.ConstraintLayout>