<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmotionSelectionPopup">

    <!--       These are the buttons used for emotion selection. -->
    <LinearLayout
        android:id="@+id/emotionChoice"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_button_size"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/roundstyle"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnHappy"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:hapticFeedbackEnabled="true"
            android:src="@drawable/button_happy_selector" />

        <ImageButton
            android:id="@+id/btnNeutral"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:hapticFeedbackEnabled="true"
            android:src="@drawable/button_calm_selector" />

        <ImageButton
            android:id="@+id/btnWorried"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:hapticFeedbackEnabled="true"
            android:src="@drawable/button_worried_selector" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>